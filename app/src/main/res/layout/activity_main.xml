<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>
    <Button
        android:id="@+id/btn_load_uc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载用户中心插件"
        android:onClick="loadPlugin"/>
    <Button
        android:id="@+id/btn_load_bm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载百度地图插件"
        android:onClick="loadPlugin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到插件登录页面"
        android:onClick="jumpPluginLogin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到插件化学习相关"
        android:onClick="jumpPluginStudy"/>
</LinearLayout>